<%- include('../partials/header') %>


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Campground Recommendor System</h1>
			<p>View our top quality hand-picked campgrounds</p>
			<p>
			<a class="btn btn-primary btn-large" href="/campgrounds/new"> Add New Campground</a>
			</p>
		
		</div>
		
	</header>

	<div class="row text-center"> 
		

		<% campgrounds.forEach(function(campground){ %>
			
			<div class="col-md-3 col-sm-6 mb-4">
				
					<div class="card" >
						<div class="card-img-top">
					          <div class="embed-responsive embed-responsive-16by9">
						            <div class="embed-responsive-item">
						              <img src="<%= campground.image %>" class="img-fluid w-100" alt="...">
						            </div>
					          </div>
					         
        				</div>
		  				
		  				<div class="card-body">
		    				<h4><%= campground.name %></h4>
		    				 <p>
					          	<a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More info</a>
					          </p>
						</div>
					</div>

			</div>
		  
		<% }); %>
				
				
			
	    

	</div>
				
				
		
	


 </div>
	
<%- include('../partials/footer') %>
